header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Logout
            a.nav__el(href='/me')
                img(src=`/img/users/${user.photo}` alt='User photo').nav__user-img
                span=user.name.split(' ')[0]
        else 
            a.nav__el(href='/login') login
            a.nav__el.nav__el--cta Sign up
